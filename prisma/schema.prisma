generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EggnetMonitor {
  monster_id   Int      @id
  eggs_donated Int
  last_update  DateTime @updatedAt
  history      EggnetMonitorHistory[]
}

model EggnetMonitorHistory {
  id           Int      @id @default(autoincrement())
  monster_id   Int
  eggs_donated Int
  timestamp    DateTime @default(now())
  monster      EggnetMonitor @relation(fields: [monster_id], references: [monster_id])

  @@unique([monster_id, eggs_donated])
  @@index([monster_id])
}
